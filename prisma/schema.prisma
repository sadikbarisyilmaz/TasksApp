datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  slug     String @unique
  title    String
  body     String
  priority String
  user     User   @relation(fields: [userId], references: [id])
  userId   String @db.ObjectId
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String @unique
  fullname       String
  hashedPassword String
  tasks          Task[]
}
